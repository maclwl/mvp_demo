<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">
        <RelativeLayout
            android:id="@+id/rel_take_photo"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90">
            <ImageView
                android:id="@+id/im_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/divider_color"/>
            <ImageView
                android:id="@+id/im_photo"
                android:src="@drawable/take_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_15">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="right"
                            android:textSize="@dimen/sp_9"
                            android:text="@string/full_name"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray" />
                        <EditText
                            android:gravity="center"
                            android:id="@+id/edit_name"
                            android:textSize="@dimen/sp_8"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:textColor="@color/text_content_color"
                            android:background="@drawable/visitor_edit_sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_15">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="right"
                            android:textSize="@dimen/sp_9"
                            android:text="@string/ic_card"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray" />
                        <EditText
                            android:gravity="center"
                            android:id="@+id/edit_ic"
                            android:textSize="@dimen/sp_8"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:textColor="@color/text_content_color"
                            android:background="@drawable/visitor_edit_sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_15">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="right"
                            android:textSize="@dimen/sp_9"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray"
                            android:text="@string/contact_number"/>
                        <EditText
                            android:gravity="center"
                            android:inputType="number"
                            android:id="@+id/edit_contact"
                            android:textSize="@dimen/sp_8"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:textColor="@color/text_content_color"
                            android:background="@drawable/visitor_edit_sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_15">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="right"
                            android:textSize="@dimen/sp_9"
                            android:text="@string/temperature"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorGray" />
                        <EditText
                            android:text="0.0"
                            android:gravity="center"
                            android:id="@+id/edit_tem"
                            android:textSize="@dimen/sp_8"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_20"
                            android:textColor="@color/text_content_color"
                            android:background="@drawable/visitor_edit_sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_15">
                    <TextView
                        android:textSize="@dimen/sp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/please_use_the_bluetooth"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">
                <TextView
                    android:gravity="right"
                    android:text="@string/gender"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray" />
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_male"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15">
                    <ImageView
                        android:id="@+id/im_male"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:background="@drawable/gender_select_bg"/>
                </LinearLayout>

                <TextView
                    android:text="@string/male"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/text_content_color"/>
                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/ll_female"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_25">
                    <ImageView
                        android:id="@+id/im_female"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_8"
                        android:background="@drawable/gender_select_bg"/>
                </LinearLayout>
                <TextView
                    android:text="@string/female"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/text_content_color"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_travel"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:textSize="@dimen/sp_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:text="@string/travel_content"
                    android:layout_marginLeft="@dimen/dp_22"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_50">
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/ll_no"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_15">
                        <ImageView
                            android:id="@+id/im_no"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:background="@drawable/gender_select_bg"/>
                    </LinearLayout>
                    <TextView
                        android:text="@string/no"
                        android:textSize="@dimen/sp_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_content_color"/>
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/ll_yes"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginLeft="@dimen/dp_25">
                        <ImageView
                            android:id="@+id/im_yes"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_8"
                            android:background="@drawable/gender_select_bg"/>
                    </LinearLayout>
                    <TextView
                        android:text="@string/yes"
                        android:textSize="@dimen/sp_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/text_content_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/sp_7"
            android:id="@+id/tv_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/please_take_photo"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rel_photo_manage"
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5">
            <ImageView
                android:id="@+id/im_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_photo"/>
            <ImageView
                android:id="@+id/im_reset"
                android:src="@drawable/back_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15">
        <TextView
            android:textSize="@dimen/sp_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:text="@string/reason_of_visit"
            android:layout_marginLeft="@dimen/dp_65"/>
        <EditText
            android:id="@+id/edit_reason"
            android:textSize="@dimen/sp_8"
            android:paddingLeft="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:textColor="@color/text_content_color"
            android:background="@drawable/visitor_edit_sp"/>
    </LinearLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/visitor_date_layout_bg">
        <CheckBox
            android:id="@+id/check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@drawable/visit_sign_check_bg"/>
        <TextView
            android:id="@+id/tv_sing_in"
            android:textSize="@dimen/sp_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:text="@string/visit_sign_in"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/check_in"/>
        <LinearLayout
            android:id="@+id/ll_date_in"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_toLeftOf="@+id/ll_time_in">
            <TextView
                android:textSize="@dimen/sp_9"
                android:text="@string/visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:id="@+id/ll_date_select_in"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/visitor_date_layout_bg">
                <TextView
                    android:id="@+id/tv_date_in"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visit_date_default"
                    android:textColor="@color/text_content_color"/>
                <ImageView
                    android:src="@drawable/icon_rili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time_in"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5">
            <TextView
                android:textSize="@dimen/sp_9"
                android:text="@string/visit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_hh_in"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/visit_time_default"
                android:textColor="@color/text_content_color"
                android:background="@drawable/visitor_date_layout_bg"/>
            <TextView
                android:text=":"
                android:textSize="@dimen/sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_mm_in"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/visit_time_default"
                android:textColor="@color/text_content_color"
                android:background="@drawable/visitor_date_layout_bg"/>
            <TextView
                android:text=":"
                android:textSize="@dimen/sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_ss_in"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/visit_time_default"
                android:textColor="@color/text_content_color"
                android:background="@drawable/visitor_date_layout_bg"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/visitor_date_layout_bg">
        <CheckBox
            android:id="@+id/check_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@drawable/visit_sign_check_bg"/>
        <TextView
            android:id="@+id/tv_sing_out"
            android:textSize="@dimen/sp_9"
            android:text="@string/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/check_out"/>
        <LinearLayout
            android:id="@+id/ll_date_out"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_toLeftOf="@+id/ll_time_out">
            <TextView
                android:textSize="@dimen/sp_9"
                android:text="@string/visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/visitor_date_layout_bg">
                <TextView
                    android:id="@+id/tv_date_out"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visit_date_default"
                    android:textColor="@color/text_content_color"/>
                <ImageView
                    android:src="@drawable/icon_rili"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time_out"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_5">
            <TextView
                android:textSize="@dimen/sp_9"
                android:text="@string/visit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_hh_out"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/visit_time_default"
                android:textColor="@color/text_content_color"
                android:background="@drawable/visitor_date_layout_bg"/>
            <TextView
                android:text=":"
                android:textSize="@dimen/sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_mm_out"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/visit_time_default"
                android:textColor="@color/text_content_color"
                android:background="@drawable/visitor_date_layout_bg"/>
            <TextView
                android:text=":"
                android:textSize="@dimen/sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_ss_out"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="@string/visit_time_default"
                android:textColor="@color/text_content_color"
                android:background="@drawable/visitor_date_layout_bg"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>