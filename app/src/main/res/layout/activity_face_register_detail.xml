<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im_face"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rel_bottom"/>

    <RelativeLayout
        android:id="@+id/rel_bottom"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/face_register_bg">

        <TextView
            android:gravity="center"
            android:id="@+id/tv_reentry"
            android:text="@string/reentry"
            android:textSize="@dimen/sp_9"
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/themeWhite"
            android:layout_centerVertical="true" />

        <TextView
            android:gravity="center"
            android:textSize="@dimen/sp_9"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_50"
            android:id="@+id/tv_confirm_entry"
            android:layout_width="wrap_content"
            android:text="@string/confirm_entry"
            android:layout_height="match_parent"
            android:textColor="@color/themeWhite"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</RelativeLayout>