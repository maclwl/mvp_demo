<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rel_item"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_90"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/guardian_rund5_gray_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="false"
            android:scaleType="fitXY"
            android:id="@+id/im_head"
            app:riv_mutate_background="true"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:background="@drawable/avatar_loading2"
            app:riv_corner_radius_top_left="@dimen/dp_5"
            app:riv_corner_radius_top_right="@dimen/dp_5"
            app:riv_corner_radius_bottom_left="@dimen/dp_0"
            app:riv_corner_radius_bottom_right="@dimen/dp_0"/>
        <RelativeLayout
            android:id="@+id/rel_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/im_head"
            android:background="@drawable/guardian_bottom_layout_gray_bg">
            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_relation"
                    android:textSize="@dimen/sp_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeWhite"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/sp_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeWhite"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>