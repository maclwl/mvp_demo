<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_115"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_marginBottom="@dimen/dp_12"
    android:layout_marginLeft="@dimen/dp_20"
    android:background="@drawable/teacher_detail_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/tv_teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:gravity="center"
        android:background="@null"
        android:enabled="false"
        android:focusable="false"
        android:singleLine="true"
        android:textColor="@color/class_card_medicinetext"
        android:textSize="@dimen/sp_8" />

    <RelativeLayout
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/im_head"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:src="@color/Blue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@null"
            android:enabled="false"
            android:focusable="false"
            android:maxWidth="@dimen/dp_60"
            android:textColor="@color/class_card_medicinetext"
            android:textSize="@dimen/sp_6" />

        <ImageView
            android:id="@+id/im_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dp_12"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/class_card_food_text"
            android:textSize="@dimen/sp_6" />

        <TextView
            android:id="@+id/tv_mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="left"
            android:textColor="@color/class_card_food_text"
            android:textSize="@dimen/sp_6" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:background="@null"
                android:enabled="false"
                android:focusable="false"
                android:text="@string/class_teacher_detail_hornor"
                android:textColor="@color/class_card_food_text"
                android:textSize="@dimen/sp_6" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_class_data"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="@dimen/dp_80"
        />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>