<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeWhite">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel_sign_type"
            android:layout_width="@dimen/dp_140"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/bg_class_green">
            <TextView
                android:text="@string/sign"
                android:id="@+id/tv_sign_type"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/themeWhite"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/im_history"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/icon_history"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:visibility="gone"
        android:id="@+id/im_camera_change"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_14"
        android:layout_below="@+id/rel_top"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_45"
        android:src="@drawable/icon_carmer_change"/>
    <RelativeLayout
        android:id="@+id/rel_avr"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_below="@+id/rel_top"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/sign_avr_layout_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="false"
            android:scaleType="fitXY"
            android:id="@+id/im_head"
            app:riv_corner_radius="@dimen/dp_5"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:id="@+id/card_camera"
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="@dimen/dp_5">
            <com.otaliastudios.cameraview.CameraView
                android:id="@+id/camera"
                android:keepScreenOn="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_temp"
        android:layout_below="@+id/rel_top"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_150"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/icon_temp">

        <com.jaygoo.widget.VerticalRangeSeekBar
            android:id="@+id/seek_bar_temp"
            android:layout_width="@dimen/dp_35"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_62"
            app:rsb_mode="single"
            app:rsb_progress_color="@color/transparent"
            app:rsb_thumb_drawable="@drawable/icon_dot"
            app:rsb_progress_default_color="@color/transparent" />
    </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/im_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_temp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:src="@drawable/icon_health_check"/>

    <LinearLayout
        android:id="@+id/ll_info"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rel_avr"
        android:layout_toRightOf="@+id/rel_avr"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:id="@+id/tv_name"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTheme"/>
        <ImageView
            android:id="@+id/im_sex"
            android:src="@drawable/icon_boy"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_date"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_info"
        android:layout_alignLeft="@+id/ll_info"
        android:layout_marginTop="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title_time"
                android:textSize="@dimen/sp_9"
                android:text="@string/time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content_color"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@+id/tv_title_time">
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_hours"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/text_rund5_green_bg"/>
                <TextView
                    android:text="(h):"
                    android:textSize="@dimen/sp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_content_color"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_minute"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/text_rund5_green_bg"/>
                <TextView
                    android:text="(m)"
                    android:textSize="@dimen/sp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_content_color"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rel_temp"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignBottom="@+id/ll_date">
        <TextView
            android:id="@+id/tv_title_temp"
            android:textSize="@dimen/sp_10"
            android:text="@string/temp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_content_color"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/tv_title_temp">
            <TextView
                android:text="0.0"
                android:gravity="center"
                android:id="@+id/tv_temp"
                android:textSize="@dimen/sp_9"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_18"
                android:textColor="@color/colorTheme"
                android:background="@drawable/text_rund5_green_bg"/>
            <TextView
                android:text="ÂºC"
                android:textSize="@dimen/sp_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textColor="@color/text_content_color"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_0_5"
        android:layout_height="@dimen/dp_50"
        android:layout_alignTop="@+id/rl_temp"
        android:layout_toLeftOf="@+id/rl_temp"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@color/divider_color"/>

    <RelativeLayout
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_scan"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/im_close"
            android:src="@drawable/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/im_sign"
            android:src="@drawable/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_guardians"
        android:layout_below="@+id/rel_avr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/rel_temp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_60">
        <TextView
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardians_title"
            android:textColor="@color/text_content_color"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/guardians_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"/>
    </LinearLayout>

</RelativeLayout>