<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/themeBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:layout_height="@dimen/dp_70"
        android:background="@drawable/bg_nav">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="false"
            android:scaleType="fitXY"
            android:id="@+id/im_logo"
            app:riv_mutate_background="true"
            android:layout_below="@+id/rel_top"
            app:riv_corner_radius="@dimen/dp_5"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:background="@color/themeWhite"/>
        <TextView
            android:id="@+id/tv_center"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:textColor="@color/themeWhite"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/im_logo"
            android:layout_toLeftOf="@+id/ll_screen"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10">
            <ImageView
                android:id="@+id/im_scan_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/rel_connect"
                android:background="@drawable/main_top_scan_class_select"/>

            <RelativeLayout
                android:id="@+id/rel_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/im_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_top_content_select"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/im_rotate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_bt_loading"
                    android:layout_marginRight="@dimen/dp_10"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_60">
        <com.taidii.diibot.view.titlebar.MainTopTabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/ll_camera_change"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_below="@+id/rel_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextureView
            android:layout_gravity="center"
            android:id="@+id/single_camera_texture_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:scaleType="fitXY"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_210"
            android:src="@drawable/face_recognize"/>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_status"
               android:textSize="@dimen/sp_9"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:textColor="@color/themeWhite"
               android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="@dimen/sp_9"
                android:text="@string/identifying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/themeWhite"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"/>
        </RelativeLayout>

        <com.taidii.diibot.widget.face.FaceRectView
            android:id="@+id/single_camera_face_rect_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>