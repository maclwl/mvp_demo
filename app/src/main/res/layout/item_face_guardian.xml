<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="@dimen/dp_60"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_15">
    <LinearLayout
        android:id="@+id/rel_item"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_60"
        android:layout_height="wrap_content"
        android:background="@drawable/guardian_rund5_gray_bg">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="false"
            android:scaleType="fitXY"
            android:id="@+id/im_head"
            app:riv_mutate_background="true"
            android:layout_width="@dimen/dp_58"
            android:layout_height="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_1"
            android:layout_gravity="center_horizontal"
            app:riv_corner_radius_top_left="@dimen/dp_5"
            app:riv_corner_radius_top_right="@dimen/dp_5"
            android:background="@drawable/avatar_loading2"
            app:riv_corner_radius_bottom_left="@dimen/dp_0"
            app:riv_corner_radius_bottom_right="@dimen/dp_0"/>
        <RelativeLayout
            android:id="@+id/rel_bottom"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/guardian_bottom_layout_green_bg">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_relation"
                    android:textSize="@dimen/sp_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeWhite"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:text="点击录入人脸"
        android:textSize="@dimen/sp_7"
        android:id="@+id/tv_register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:layout_marginTop="@dimen/dp_4"/>
</LinearLayout>