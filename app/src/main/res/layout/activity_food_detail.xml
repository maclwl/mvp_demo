<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_height="match_parent">

    <include
        layout="@layout/activity_class_card_head"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="11.8"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/student_list_head_bg"
                    android:layout_height="@dimen/dp_30">

                    <TextView
                        android:id="@+id/tv_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/sp_10"
                        android:text="小一班"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:drawableLeft="@drawable/arrow_left"
                        android:drawablePadding="@dimen/dp_8"
                        android:textColor="@color/class_card_head_text"
                        >


                    </TextView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/class_card_bottom_allbg"
                    android:layout_height="match_parent">
                    <WebView
                        android:id="@+id/web_view"
                        android:layerType="software"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/dp_15"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </LinearLayout>



</LinearLayout>

</FrameLayout>