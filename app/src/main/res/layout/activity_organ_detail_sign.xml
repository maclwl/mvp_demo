<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeWhite">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_no_sign"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/bg_class_green">
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:text="@string/organ_sign_in"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeWhite"
                    android:layout_centerVertical="true" />
                <TextView
                    android:id="@+id/tv_organ"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/themeWhite"
                    android:layout_centerVertical="true" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/im_camera_change"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_14"
            android:layout_below="@+id/rel_top"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_55"
            android:src="@drawable/icon_carmer_change"/>

        <RelativeLayout
            android:id="@+id/rel_avr"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_below="@+id/rel_top"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/sign_avr_layout_bg">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_oval="false"
                android:scaleType="fitXY"
                android:id="@+id/im_head"
                app:riv_corner_radius="@dimen/dp_5"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/card_camera"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                card_view:cardCornerRadius="@dimen/dp_5">
                <com.otaliastudios.cameraview.CameraView
                    android:id="@+id/camera"
                    android:keepScreenOn="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_temp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/rel_top"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_5">
            <RelativeLayout
                android:id="@+id/rel_temp"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_150"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_temp">
                <com.jaygoo.widget.VerticalRangeSeekBar
                    android:id="@+id/seek_bar_temp"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_62"
                    app:rsb_mode="single"
                    app:rsb_progress_color="@color/transparent"
                    app:rsb_thumb_drawable="@drawable/icon_dot"
                    app:rsb_progress_default_color="@color/transparent" />
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/tv_temp"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTheme"/>
                <TextView
                    android:text="ÂºC"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/text_content_color"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_info"
            android:orientation="horizontal"
            android:layout_below="@+id/rel_avr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toLeftOf="@+id/ll_temp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTheme"/>
            <ImageView
                android:id="@+id/im_sex"
                android:src="@drawable/icon_boy"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_temp"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10">
            <TextView
                android:id="@+id/tv_classroom"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:id="@+id/tv_start_time"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:id="@+id/tv_remaining"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/text_content_color"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_signed"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_top"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:background="@color/colorGreen15">
            <ImageView
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/icon_checked"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_title"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_time"
                android:textSize="@dimen/sp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/colorDarkGray"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_avr_ed"
            android:layout_below="@+id/ll_top"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/sign_avr_layout_bg">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_oval="false"
                android:scaleType="fitXY"
                android:id="@+id/im_head_ed"
                app:riv_corner_radius="@dimen/dp_5"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_88"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_info_ed"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignTop="@+id/rel_avr_ed"
            android:layout_toRightOf="@+id/rel_avr_ed">
            <TextView
                android:id="@+id/tv_name_ed"
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTheme"/>
            <ImageView
                android:id="@+id/im_sex_ed"
                android:src="@drawable/icon_boy"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/ll_info_ed"
            android:background="@color/colorTheme"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_alignLeft="@+id/ll_info_ed"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignLeft="@+id/view_line">
            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_classroom_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_start_time_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/text_content_color"/>
            <TextView
                android:textSize="@dimen/sp_12"
                android:id="@+id/tv_remaining_ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/text_content_color"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_scan"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/im_close"
            android:src="@drawable/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/im_sign"
            android:src="@drawable/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>