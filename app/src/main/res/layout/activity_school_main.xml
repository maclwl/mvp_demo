<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeBg">

    <com.taidii.diibot.view.titlebar.MainTopBarLayout
        android:id="@+id/main_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/rel_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_85">
        <com.taidii.diibot.view.titlebar.MainTopTabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/ll_camera_change"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_camera_change"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_5">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/icon_carmer_change"/>
        </LinearLayout>
    </RelativeLayout>

    <!--班级布局-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_class"
        android:layout_below="@+id/rel_tab"
        android:layout_width="match_parent"
        android:background="@color/themeBg"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnablePureScrollMode="true"
            app:srlEnableLoadMore="true"
            app:srlDragRate="0.75">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/class_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </RelativeLayout>

    <!--扫描布局-->
    <RelativeLayout
        android:id="@+id/rel_scan"
        android:layout_below="@+id/rel_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--扫码-->
        <RelativeLayout
            android:id="@+id/rel_scanning"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <cn.bingoogolapple.qrcode.zbar.ZBarView
                android:id="@+id/z_bar_view"
                style="@style/MatchMatch"
                app:qrcv_animTime="1000"
                app:qrcv_isAutoZoom="true"
                app:qrcv_isBarcode="false"
                app:qrcv_verticalBias="-1"
                app:qrcv_borderSize="@dimen/dp_1"
                app:qrcv_cornerSize="@dimen/dp_2"
                app:qrcv_topOffset="@dimen/dp_10"
                app:qrcv_rectWidth="@dimen/dp_150"
                app:qrcv_isShowLocationPoint="true"
                app:qrcv_isShowTipBackground="true"
                app:qrcv_cornerLength="@dimen/dp_20"
                app:qrcv_isTipTextBelowRect="false"
                app:qrcv_toolbarHeight="@dimen/dp_10"
                app:qrcv_maskColor="@color/colorScan"
                app:qrcv_borderColor="@color/themeWhite"
                app:qrcv_cornerColor="@color/colorTheme"
                app:qrcv_isOnlyDecodeScanBoxArea="false"
                app:qrcv_barcodeRectHeight="@dimen/dp_80"
                app:qrcv_scanLineColor="@color/colorTheme"
                app:qrcv_isShowTipTextAsSingleLine="false"
                app:qrcv_isShowDefaultScanLineDrawable="true"
                app:qrcv_isShowDefaultGridScanLineDrawable="false"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_scan"
                android:layout_alignParentBottom="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorScan"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <!--扫码结果-->
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rel_scan_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_scan_stop">
            <ImageView
                android:id="@+id/im_go_scan"
                android:src="@drawable/bg_btn_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_35"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>